{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    // Generate d.ts files, disable if not needed
    "declaration": true,
    "noEmitOnError": true,
    "removeComments": false
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
